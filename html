function index_1(a) {
    if (a == answers[0]) {
        answers.shift();
        console.log(answers);
    }
}
function index_2(a) {
    if (a == answers[1]) {
        a1 = answers.slice(0, 1);
        a2 = answers.splice(2, number-1);
        answers = a1.concat(a2);
        console.log(answers);
    }
}
function index_3(a) {
    if (a == answers[2]) {
        a1 = answers.slice(0, 2);
        a2 = answers.splice(3, number-2);
        answers = a1.concat(a2);
        console.log(answers)
    }
}
console.log(answers);
function shuffle() {
    const random1 = answers[Math.floor(Math.random() * answers.length)];
    index_1(random1);
    index_2(random1);
    index_3(random1);
    const random2 = answers[Math.floor(Math.random() * answers.length)];
    index_1(random2);
    index_2(random2);
    const random3 = answers[Math.floor(Math.random() * answers.length)];
    index_1(random3);
    first.innerHTML = random1;
    second.innerHTML = random2;
}
shuffle();
