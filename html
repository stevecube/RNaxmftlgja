const question3 = '분류기준 - 형태'

const answer1 = '단어를 일정한 기준에 따라 나누어 공통된 성질을 가진 것끼리 묶은 갈래';
const answer2 = '홀로 쓰일 수 있는 말 또는 홀로 쓰일 수 있는 말에 붙어 쉽게 떨어지지 않는 말'
const answer3 = "단어는 문장에서 쓰일 때 형태가 변하는지에 따라 '불변어(형태가 변하지 않는 단어)와 가변어(형태가 변하는 단어)'로 나뉨"

const eqal = ': ';

let questions = [
    question1,
    question2,
    question3,
]
let answers = [
    answer1,
    answer2,
    answer3,
]
let number = questions.length;

